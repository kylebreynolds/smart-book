<div class="col mb-5">
  <div class="card h-100" style="max-width: 250px">
    <!-- Product image-->
    <img class="card-img-top h-50" src={{image_url}} />
    <!-- Product details-->
    <div
      class="card-body text-center p-3 d-flex flex-column justify-content-around"
    >

      <!-- Product name-->
      <h5 id="{{id}}" class="fw-bolder card-title">{{book_name}}</h5>
      <!-- Product price-->
      <p class="card-text">${{price}}</p>

    </div>
    <!-- Product actions-->
    <div class="card-footer text-center pt-0 border-top-0 bg-transparent p-3">
      <a class="btn btn-outline-dark mt-auto" href="/book/{{id}}">Description
        and Reviews</a>
      <button type="button" id="add" class="btn btn-warning m-3">Add to Cart</button>
    </div>
  </div>
</div>